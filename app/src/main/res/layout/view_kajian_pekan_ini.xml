<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context="id.or.qodr.jadwalkajianpekalongan.fragment.KajianPekanIni">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#dedede">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="2dp"
            card_view:cardElevation="3dp"
            card_view:contentPadding="0dp"
            card_view:cardCornerRadius="@dimen/card_album_radius">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!--<LinearLayout-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:orientation="vertical"-->
                    <!--android:layout_weight="1">-->
                    <!--<RelativeLayout-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:layout_marginTop="8dp"-->
                        <!--android:layout_marginBottom="8dp">-->

                        <!--<ImageView-->
                            <!--android:id="@+id/img"-->
                            <!--android:src="@drawable/msjid"-->
                            <!--android:scaleType="centerCrop"-->
                            <!--android:layout_centerInParent="true"-->
                            <!--android:layout_width="90dp"-->
                            <!--android:layout_height="100dp" />-->
                    <!--</RelativeLayout>-->
                <!--</LinearLayout>-->

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:id="@+id/_id"
                        android:text="ID"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/jniskjian"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/temaPekan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tema : Minhajul Muslim"
                        android:drawableLeft="@drawable/ic_tema"
                        android:drawablePadding="4dp"
                        android:gravity="center_vertical"
                        android:textColor="#433f3f"
                        android:fontFamily="sans-serif-condensed"
                        android:paddingLeft="4dp"
                        android:textStyle="bold"
                        android:textSize="18sp"/>
                    <TextView
                        android:id="@+id/pemateriPekan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pemateri : ust Fahmi A."
                        android:drawableLeft="@drawable/ic_pemateri"
                        android:drawablePadding="4dp"
                        android:gravity="center_vertical"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="#433f3f"
                        android:paddingLeft="4dp"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/lokasiPekan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lokasi : Muadz bin Jabal"
                        android:drawableLeft="@drawable/ic_location"
                        android:drawablePadding="4dp"
                        android:gravity="center_vertical"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="#433f3f"
                        android:paddingLeft="4dp"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/cpPekan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="CP : 082100012345"
                        android:drawableLeft="@drawable/ic_cp"
                        android:drawablePadding="4dp"
                        android:gravity="center_vertical"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="#433f3f"
                        android:paddingBottom="4dp"
                        android:paddingLeft="4dp"
                        android:textSize="16sp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1">
                    <RelativeLayout
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginTop="18dp"
                        android:layout_marginBottom="18dp"
                        android:background="@drawable/rounded_style">
                        <TextView
                            android:id="@+id/bulan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:text="Jan"
                            android:textSize="30sp"/>
                        <TextView
                            android:id="@+id/tanggal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginBottom="-10dp"
                            android:textColor="#000"
                            android:layout_above="@id/bulan"
                            android:textStyle="bold"
                            android:text="24"
                            android:textSize="18sp" />


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_below="@id/bulan"
                            android:layout_marginTop="-8dp">

                            <TextView
                                android:id="@+id/mulaiPekan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textColor="#000"
                                android:textStyle="bold"
                                android:paddingLeft="4dp"
                                android:layout_alignParentStart="true"
                                android:layout_gravity="center_horizontal"
                                android:text="18.00"
                                android:textSize="14dp"/>

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textColor="#000"
                                android:textStyle="bold"
                                android:layout_centerInParent="true"
                                android:layout_gravity="center_horizontal"
                                android:text="-"
                                android:textSize="14dp"/>

                            <TextView
                                android:id="@+id/sampaiPekan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_alignParentEnd="true"
                                android:paddingRight="4dp"
                                android:textColor="#000"
                                android:textStyle="bold"
                                android:text="20.00"
                                android:textSize="14dp"/>
                        </RelativeLayout>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>

</FrameLayout>

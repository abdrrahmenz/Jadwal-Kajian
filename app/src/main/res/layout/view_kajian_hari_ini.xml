<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:tag="reload"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context="id.or.qodr.jadwalkajianpekalongan.fragment.KajianHariIni">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/cardHari"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:foreground="@drawable/card_foreground"
            app:cardElevation="3dp"
            app:contentPadding="0dp"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!--<LinearLayout-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:orientation="vertical"-->
                    <!--android:layout_weight="1">-->
                    <!--<RelativeLayout-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:layout_marginTop="8dp"-->
                        <!--android:layout_marginBottom="8dp">-->

                    <!--<ImageView-->
                        <!--android:id="@+id/img"-->
                        <!--android:src="@drawable/msjid"-->
                        <!--android:scaleType="centerCrop"-->
                        <!--android:layout_centerInParent="true"-->
                        <!--android:layout_width="90dp"-->
                        <!--android:layout_height="100dp" />-->
                    <!--</RelativeLayout>-->
                <!--</LinearLayout>-->

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:id="@+id/_id"
                        android:text="ID"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/jniskjian"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tggl"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/temaHari"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tema : Minhajul Muslim"
                        android:drawableLeft="@drawable/ic_tema"
                        android:drawablePadding="4dp"
                        android:gravity="center_vertical"
                        android:textColor="#433f3f"
                        android:fontFamily="sans-serif-condensed"
                        android:paddingLeft="4dp"
                        android:textStyle="bold"
                        android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/pemateriHari"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pemateri : ust Fahmi A."
                        android:drawableLeft="@drawable/ic_pemateri"
                        android:drawablePadding="4dp"
                        android:gravity="center_vertical"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="#433f3f"
                        android:paddingLeft="4dp"
                        android:textSize="16sp"/>


                    <TextView
                        android:id="@+id/lokasiHari"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lokasi : Muadz bin Jabal"
                        android:drawableLeft="@drawable/ic_location"
                        android:drawablePadding="4dp"
                        android:gravity="center_vertical"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="#433f3f"
                        android:paddingLeft="4dp"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/lat"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/lng"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:id="@+id/cpHari"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="CP : 082100012345"
                        android:drawableLeft="@drawable/ic_cp"
                        android:drawablePadding="4dp"
                        android:gravity="center_vertical"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="#433f3f"
                        android:paddingLeft="4dp"
                        android:textSize="16sp"/>



                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1">
                    <RelativeLayout
                        android:layout_width="90dp"
                        android:layout_height="110dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/clock">
                        <TextView
                            android:id="@+id/sd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:paddingBottom="2dp"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:text="s/d"/>
                        <TextView
                            android:id="@+id/mulaiHari"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="#000"
                            android:layout_above="@id/sd"
                            android:textStyle="bold"
                            android:text="9.30"
                            android:layout_marginBottom="-6dp"
                            android:textSize="24dp" />


                        <TextView
                            android:id="@+id/sampaiHari"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="#000"
                            android:layout_alignParentBottom="true"
                            android:layout_below="@id/sd"
                            android:textStyle="bold"
                            android:text="11.30"
                            android:layout_marginTop="-35dp"
                            android:textSize="24dp"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>

</FrameLayout>
